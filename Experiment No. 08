import java.util.*;
public class SocialNetworkAnalysis
{
    final static int INF = 9999;
    public static void main(String[] args)
    {
        int n = 4;

        String[] people = {"Mangesh", "Soham", "Robin", "Harshad"};
        int[][] graph = {
            {0, 1, 0, 0},
            {1, 0, 1, 0},
            {0, 1, 0, 1},
            {0, 0, 1, 0}
        };
        int[][] dist = new int[n][n];
        for (int i = 0; i < n; i++)
        {
            for (int j = 0; j < n; j++)
            {
                if (i != j && graph[i][j] == 0)
                    dist[i][j] = INF;
                else
                    dist[i][j] = graph[i][j];
            }
        }
        for (int k = 0; k < n; k++)
        {
            for (int i = 0; i < n; i++)
            {
                for (int j = 0; j < n; j++)
                {
                    if (dist[i][k] + dist[k][j] < dist[i][j])
                        dist[i][j] = dist[i][k] + dist[k][j];
                }
            }
        }
        System.out.println("Social Network Analysis - Shortest Connection Paths\n");
        System.out.print("             ");
        for (String p : people)
            System.out.printf("%10s", p);
        System.out.println();
        for (int i = 0; i < n; i++)
        {
            System.out.printf("%10s", people[i]);
            for (int j = 0; j < n; j++)
            {
                if (dist[i][j] == INF)
                    System.out.printf("%10s", "âˆž");
                else
                    System.out.printf("%10d", dist[i][j]);
            }
            System.out.println();
        }
    }
}
