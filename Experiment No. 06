import java.util.*;
class GPSNavigation
{
    private int vertices;
    private int[][] graph;
    private String[] cityNames;
    GPSNavigation(int v)
    {
        vertices = v;
        graph = new int[v][v];
        cityNames = new String[v];
    }
    void addEdge(int src, int dest, int distance)
    {
        graph[src][dest] = distance;
        graph[dest][src] = distance;
    }
    int minDistance(int[] dist, boolean[] visited)
    {
        int min = Integer.MAX_VALUE, minIndex = -1;
        for (int v = 0; v < vertices; v++)
        {
            if (!visited[v] && dist[v] <= min)
            {
                min = dist[v];
                minIndex = v;
            }
        }
        return minIndex;
    }
    void dijkstra(int src)
    {
        int[] dist = new int[vertices];
        boolean[] visited = new boolean[vertices];
        int[] parent = new int[vertices];
        Arrays.fill(dist, Integer.MAX_VALUE);
        Arrays.fill(visited, false);
        Arrays.fill(parent, -1);
        dist[src] = 0;
        for (int count = 0; count < vertices - 1; count++)
        {
            int u = minDistance(dist, visited);
            visited[u] = true;
            for (int v = 0; v < vertices; v++)
            {
                if (!visited[v] && graph[u][v] != 0 && dist[u] + graph[u][v] < dist[v])
                {
                    dist[v] = dist[u] + graph[u][v];
                    parent[v] = u;
                }
            }
        }
        display(src, dist, parent);
    }
    void display(int src, int[] dist, int[] parent)
    {
        System.out.println("\nGPS Navigation System - Shortest Routes");
        System.out.println("----------------------------------------");
        for (int i = 0; i < vertices; i++)
        {
            if (i != src)
            {
                System.out.print("From " + cityNames[src] + " -> " + cityNames[i] +
                                 " : Distance = " + dist[i] + " km | Path: ");
                printPath(i, parent);
                System.out.println();
            }
        }
    }
    void printPath(int j, int[] parent)
    {
        if (parent[j] == -1)
        {
            System.out.print(cityNames[j]);
            return;
        }
        printPath(parent[j], parent);
        System.out.print(" -> " + cityNames[j]);
    }
    public static void main(String[] args)
    {
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter number of cities: ");
        int v = sc.nextInt();
        sc.nextLine();
        GPSNavigation gps = new GPSNavigation(v);
        System.out.println("Enter city names:");
        for (int i = 0; i < v; i++)
        {
            System.out.print("City " + (i + 1) + ": ");
            gps.cityNames[i] = sc.nextLine();
        }
        System.out.println("\nEnter distance between cities (0 if no direct road):");
        for (int i = 0; i < v; i++)
        {
            for (int j = 0; j < v; j++)
            {
                if (i != j)
                {
                    System.out.print("Distance between " + gps.cityNames[i] + 
                                     " and " + gps.cityNames[j] + ": ");
                    gps.graph[i][j] = sc.nextInt();
                }
                else
                {
                    gps.graph[i][j] = 0;
                }
            }
        }
        System.out.print("\nEnter source city index (0 to " + (v - 1) + "): ");
        int src = sc.nextInt();
        gps.dijkstra(src);
    }
}
