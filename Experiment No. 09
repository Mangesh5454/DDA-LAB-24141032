import java.util.*;
class GamePathfinding {
    private int vertices;
    private int[][] graph;
    private String[] areaNames;
    GamePathfinding(int v) {
        vertices = v;
        graph = new int[v][v];
        areaNames = new String[v];
    }
    void addEdge(int src, int dest, int distance) {
        graph[src][dest] = distance;
        graph[dest][src] = distance;
    }
    int minDistance(int[] dist, boolean[] visited) {
        int min = Integer.MAX_VALUE, minIndex = -1;
        for (int v = 0; v < vertices; v++) {
            if (!visited[v] && dist[v] <= min) {
                min = dist[v];
                minIndex = v;
            }
        }
        return minIndex;
    }
    void dijkstra(int src) {
        int[] dist = new int[vertices];
        boolean[] visited = new boolean[vertices];
        int[] parent = new int[vertices];
        Arrays.fill(dist, Integer.MAX_VALUE);
        Arrays.fill(visited, false);
        Arrays.fill(parent, -1);
        dist[src] = 0;
        for (int count = 0; count < vertices - 1; count++) {
            int u = minDistance(dist, visited);
            visited[u] = true;
            for (int v = 0; v < vertices; v++) {
                if (!visited[v] && graph[u][v] != 0 && dist[u] + graph[u][v] < dist[v]) {
                    dist[v] = dist[u] + graph[u][v];
                    parent[v] = u;
                }
            }
        }
        display(src, dist, parent);
    }
    void display(int src, int[] dist, int[] parent) {
        System.out.println("\nGame Pathfinding Results");
        System.out.println("--------------------------------------");
        for (int i = 0; i < vertices; i++) {
            if (i != src) {
                System.out.print("From " + areaNames[src] + " to " + areaNames[i] +
                                 " : Distance = " + dist[i] + " | Path: ");
                printPath(i, parent);
                System.out.println();
            }
        }
    }
    void printPath(int j, int[] parent) {
        if (parent[j] == -1) {
            System.out.print(areaNames[j]);
            return;
        }
        printPath(parent[j], parent);
        System.out.print(" -> " + areaNames[j]);
    }
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter number of game areas: ");
        int v = sc.nextInt();
        sc.nextLine();
        GamePathfinding game = new GamePathfinding(v);
        System.out.println("Enter area names:");
        for (int i = 0; i < v; i++) {
            System.out.print("Area " + (i + 1) + ": ");
            game.areaNames[i] = sc.nextLine();
        }
        System.out.println("\nEnter distance between areas (0 if no direct path):");
        for (int i = 0; i < v; i++) {
            for (int j = 0; j < v; j++) {
                if (i != j) {
                    System.out.print("Distance between " + game.areaNames[i] +
                                     " and " + game.areaNames[j] + ": ");
                    game.graph[i][j] = sc.nextInt();
                } else {
                    game.graph[i][j] = 0;
                }
            }
        }
        System.out.print("\nEnter source area index (0 to " + (v - 1) + "): ");
        int src = sc.nextInt();

        game.dijkstra(src);
    }
}
