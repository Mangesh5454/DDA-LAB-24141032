import java.util.*;
class ImageMST
{
    int vertices;
    int[][] graph;
    ImageMST(int v)
    {
        vertices = v;
        graph = new int[v][v];
    }
    int minKey(int[] key, boolean[] mstSet)
    {
        int min = Integer.MAX_VALUE, minIndex = -1;
        for (int v = 0; v < vertices; v++)
        {
            if (!mstSet[v] && key[v] < min)
            {
                min = key[v];
                minIndex = v;
            }
        }
        return minIndex;
    }
    void primMST()
    {
        int[] parent = new int[vertices];
        int[] key = new int[vertices];
        boolean[] mstSet = new boolean[vertices];

        for (int i = 0; i < vertices; i++)
        {
            key[i] = Integer.MAX_VALUE;
            mstSet[i] = false;
        }
        key[0] = 0;
        parent[0] = -1;

        for (int count = 0; count < vertices - 1; count++)
        {
            int u = minKey(key, mstSet);
            mstSet[u] = true;

            for (int v = 0; v < vertices; v++)
            {
                if (graph[u][v] != 0 && !mstSet[v] && graph[u][v] < key[v])
                {
                    parent[v] = u;
                    key[v] = graph[u][v];
                }
            }
        }
        displayMST(parent);
    }
    void displayMST(int[] parent)
    {
        int totalCost = 0;
        System.out.println();
        System.out.println("Image Segmentation using MST");
        System.out.println("--------------------------------");
        System.out.println("Edges in the Minimum Cost Spanning Tree:");
        for (int i = 1; i < vertices; i++)
        {
            System.out.println("Region " + parent[i] + " - Region " + i + "  |  Cost: " + graph[i][parent[i]]);
            totalCost += graph[i][parent[i]];
        }
        System.out.println("--------------------------------");
        System.out.println("Total Cost (Segmentation Smoothness): " + totalCost);
    }
}
public class ImageSegmentation
{
    public static void main(String[] args)
    {
        int v = 5;
        ImageMST image = new ImageMST(v);

        int[][] costMatrix = {
            {0, 2, 0, 6, 0},
            {2, 0, 3, 8, 5},
            {0, 3, 0, 0, 7},
            {6, 8, 0, 0, 9},
            {0, 5, 7, 9, 0}
        };
        image.graph = costMatrix;
        image.primMST();
    }
}
