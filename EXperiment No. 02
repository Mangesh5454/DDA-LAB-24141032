import java.util.*;
class Player
{
    String name;
    int score;
    Player(String name, int score)
    {
        this.name = name;
        this.score = score;
    }
}
public class GameLeaderboard
{
    public static void main(String[] args)
    {
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter number of players: ");
        int n = sc.nextInt();
        sc.nextLine(); 
        ArrayList<Player> players = new ArrayList<Player>();
        for (int i = 0; i < n; i++)
        {
            System.out.println("\nEnter details for Player " + (i + 1) + ":");
            System.out.print("Enter player name: ");
            String name = sc.nextLine();
            System.out.print("Enter player score: ");
            int score = sc.nextInt();
            sc.nextLine(); 
            players.add(new Player(name, score));
        }
        Collections.sort(players, new Comparator<Player>(){
            public int compare(Player p1, Player p2)
            {
                return Integer.compare(p2.score, p1.score);
            }
        });
        System.out.println("\n===== GAME LEADERBOARD =====");
        System.out.println("Rank\tName\tScore");
        System.out.println("---------------------------");
        int rank = 1;
        for (Player p : players)
        {
            System.out.println(rank + "\t" + p.name + "\t" + p.score);
            rank++;
        }
        sc.close();
    }
}
